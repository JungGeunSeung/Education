<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration PUBLIC "-//APACHE//DTD LOG4J 1.2//EN" "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
<!-- 
	#log4j 레벨
	
	FATAL
	ERROR
	WARN
	INFO
	DEBUG
	TRACE
 -->
	<!-- Appenders -->
	<appender name="console" class="org.apache.log4j.ConsoleAppender">
		<param name="Target" value="System.out" />
		<layout class="org.apache.log4j.PatternLayout">
		<!-- %-5p : 왼쪽 정렬로 5글자 -->
		<!-- %c : 클래스이름 -->
		<!-- %m : 메세지 내용 -->
		<!-- %n : 엔터 -->
<!-- 			<param name="ConversionPattern" value="%-5p: %c - %m%n" /> -->
			<param name="ConversionPattern" value="[%-5p]:[%d{yy-MM-dd HH:mm:ss}][%c(%L)] - %m%n" />
		</layout>
	</appender>
	
	<appender name="daily" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="file" value="D:/workspace/temp/log/proj8.log"/> <!-- 저장위치 -->
        <param name="Append" value="true"/> <!-- 한줄씩 엔터 -->
        <param name="DatePattern" value="'.'yyMMdd.txt"/> <!-- proj8.240925.log 처럼 파일을 백업시킨다. -->
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="[%-5p]:[%d{yy-MM-dd HH:mm:ss}][%c(%L)] - %m%n"/>
        </layout>
    </appender>
    
	<appender name="rolling" class="org.apache.log4j.RollingFileAppender">
        <param name="file" value="D:/workspace/temp/log/proj8_size.log"/>
        <param name="Append" value="true"/>
        <param name="MaxFileSize" value="1KB"/> <!-- 파일을 나눌 크기 -->
        <param name="MaxBackupIndex" value="10"/> <!-- 파일 최대 개수 -->
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="[%-5p]:[%d{yy-MM-dd HH:mm:ss}][%c(%L)] - %m%n"/>
        </layout>
    </appender>
    
	<!-- Application Loggers -->
	<logger name="kr.or.human">
		<level value="info" />
		<appender-ref ref="daily" />
		<appender-ref ref="rolling" />
	</logger>
	
	<logger name="jdbc.sqlonly" additivity="false"> 
        <level value="INFO"/> 
        <appender-ref ref="console"/> 
    </logger>

    <logger name="jdbc.resultsettable" additivity="false">
         <level value="INFO"/> 
         <appender-ref ref="console"/> 
     </logger>
	
	<!-- 3rdparty Loggers -->
	<logger name="org.springframework.core">
		<level value="info" />
	</logger>
	
	<logger name="org.springframework.beans">
		<level value="info" />
	</logger>
	
	<logger name="org.springframework.context">
		<level value="info" />
	</logger>

	<logger name="org.springframework.web">
		<level value="info" />
	</logger>

	<!-- Root Logger -->
	<root>
		<priority value="warn" />
		<!-- ref="console" : appender의 name의 해당 -->
		<appender-ref ref="console" />
	</root>
	
</log4j:configuration>
